{
  "name": "church-server",
  "version": "1.0.0",
  "description": "Backend for Church Management System",
  "keywords": [
    "church",
    "backend",
    "management"
  ],
  "license": "MIT",
  "author": "Your Name",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run rtmp\" \"npm run docker:up\" ",
    "server": "nodemon server.js",
    "rtmp": "node rtmp-server.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "dev": "concurrently \"npm run server\" \"npm run rtmp\"",
    "keys:generate": "node src/scripts/generate-secrets.js",
    "keys:quick": "node -e \"console.log('Quick Secret:', require('crypto').randomBytes(32).toString('hex'))\"",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "build": "^0.1.4",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "geoip-lite": "^1.4.10",
    "google-auth-library": "^10.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "moment": "^2.30.1",
    "mongoose": "^9.0.2",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "node-fetch": "^3.3.2",
    "node-media-server": "^4.2.2",
    "nodemailer": "^7.0.11",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "socket.io": "^4.8.1",
    "stripe": "^20.1.0",
    "ua-parser-js": "^2.0.7",
    "updates": "^17.0.7",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-media-server": "^2.3.7",
    "@types/nodemailer": "^7.0.4",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11"
  }
}
